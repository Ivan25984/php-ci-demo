{
    "name": "ivan25984/php-ci-demo",
    "description": "PHP CI/CD Matrix Testing Demo",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "9.5.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-ci": "phpunit --colors=never --log-junit report.xml"
    }
}
