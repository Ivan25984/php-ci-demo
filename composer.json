{
    "name": "student/php-ci-project",
    "description": "Простой проект для GitLab CI",
    "type": "project",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "ci-test": "phpunit --log-junit report.xml"
    },
    "config": {
        "platform-check": false
    }
}
